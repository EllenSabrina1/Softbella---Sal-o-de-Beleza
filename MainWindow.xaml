<Window x:Class="ProjetoPDS_SoftBella.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoPDS_SoftBella"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid Background="#D5BDAF">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="Softbella Beauty Salon" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                <TextBlock Text="E-mail"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>
                <TextBlock Text="Senha"/>
                <PasswordBox x:Name="pwdSenha" Margin="0,0,0,20"/>
                <Button Content="Entrar" Background="#4CAF50" Foreground="White" Width="150" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
